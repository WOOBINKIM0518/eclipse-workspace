package exam;

public class Test7 {

	public static void main(String[] args) {
		int sum =0;
		int arr[] = new int[10];
		
		
		System.out.println("1~10사이의 랜덤한 정수 10개");
		System.out.println();
		
		for(int i =0 ; i <arr.length; i++) {
			arr[i] = (int)(Math.random()*10+1);
			
			sum += arr[i];
			
		}System.out.println("랜덤한 정수 10개의 평균은 : "+ (double)sum/arr.length);
	}

}
